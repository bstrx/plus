/**
 * Implementation of hook_block_info().
 */
function opensoft_block_info() {
    $blocks['last-articles'] = array(
        'info' => t('Last articles'),
    );

    $blocks['last-fotoreports'] = array(
        'info' => t('Last fotoreports'),
    );

    return $blocks;
}

/**
 * Implementation of hook_block_view().
 */
function opensoft_block_view($delta='') {
    $block = array();
    switch ($delta) {
        case 'last-articles':
            $block['subject'] = t('Last articles');
            $block['content'] = lastArticlesContents();
            $block['articles'] = getArticles();
            break;
        case 'last-photoreports':
            $block['subject'] = t('Last photoreports');
            $block['content'] = getLastPhotoreports();
            break;
    }
    return $block;
}

